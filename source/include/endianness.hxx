#pragma once

namespace ansak
{

// Endian-ness of platform

namespace endian {

static const char n[2] = { 3, 5 };

}

bool isLittleEndian()
{
    return *reinterpret_cast<const char16_t*>(&ansak::endian::n[0]) == 0x503;
}

}
